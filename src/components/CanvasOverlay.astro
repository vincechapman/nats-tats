---
import { getImage } from "astro:assets";
import Canvas from "../components/texture-canvas.png";
const optimizedCanvas = await getImage({ src: Canvas, format: "webp" });
---

<!-- Background -->
<div style={`background-image: url(${optimizedCanvas.src});`}></div>

<style>
    div {
        background-size: 100%;
        background-blend-mode: screen;
        z-index: 100;
        opacity: 0.5;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
    }
</style>
